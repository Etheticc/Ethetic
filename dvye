    <script>
        document.getElementById('enter-overlay').addEventListener('click', function () {
            const audio = document.getElementById('background-music');
            audio.play();
            document.getElementById('enter-overlay').style.display = 'none';
            document.getElementById('rounded-box').style.opacity = 1;
        });

        document.getElementById('volume-btn').addEventListener('click', function () {
            const audio = document.getElementById('background-music');
            if (audio.muted) {
                audio.muted = false;
                document.getElementById('volume-btn').textContent = 'ðŸ”Š';
            } else {
                audio.muted = true;
                document.getElementById('volume-btn').textContent = 'ðŸ”‡';
            }
        });
    </script>
